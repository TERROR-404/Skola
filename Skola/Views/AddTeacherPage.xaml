<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Skola.Views.AddTeacherPage"
             Title="AddTeacherPage">
    <VerticalStackLayout>
        <Editor x:Name="TeacherName"
                Placeholder="Jméno"
                Text="{Binding TeacherName}"
                HeightRequest="100" />
        <Editor x:Name="TeacherSurname"
                Placeholder="Příjmení"
                Text="{Binding TeacherSurname}"
                HeightRequest="100" />
        <Button Text="Save"
                    Clicked="SaveTeacher_Clicked" />
    </VerticalStackLayout>
</ContentPage>